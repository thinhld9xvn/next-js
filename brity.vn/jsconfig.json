        "@redux/*" : ["redux/*"],   
        "@redux_state/*": ["redux/state/*"],
        "@constants/*": ["constants/*"],
        "@global_redux/*": ["redux/reducer/global/*"], 
        "@products_redux/*": ["redux/reducer/products/*"], 
        "@carts_redux/*": ["redux/reducer/carts/*"], 
        "@articles_redux/*" : ["redux/reducer/articles/*"],        
