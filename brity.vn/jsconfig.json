        "@home_widgets/*": ["components/home_layout/home_widgets/*"],
        "@templates/*": ["components/templates/*"],
        "@icon_fonts/*": ["assets/icon-fonts/*"],
        "@js_dir/*": ["assets/js/*"],
        "@css_dir/*": ["assets/css/*"],
